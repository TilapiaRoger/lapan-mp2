<html>
    <head>
        <script src="jquery-3.4.1.js"></script>
        
        <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
        
        <link rel="stylesheet" type="text/css" href="/css/main-pages.css">
        
        <script src="../menuJS.js">
        </script>
        
    </head>
    
    <body>
        <div class="main-menu">
            <div id="home-user">
                <a href="home">Home</a>
                <div id="student-org-menu">
                    <button id="student-org-menu-buttton"> Student Clubs
                    </button>
                    <div id="student-org-options">
                        <a href="org-list">All Student Clubs</a>
                        <a href="org-list">My Student Clubs</a>
                    </div>
                </div>
            </div>
            
            <div id="home-admin">
                <ul id="list-user">
                    <li>
                        <a href="home">Home</a>
                    </li>
                    <li>
                        <a href="org-list">All Student Organizations</a>
                    </li>
                </ul>
            </div>
            
            <div class="user-icon">
                <button name="{{username}}" id="user-options-button">
                    <img src="/photos/icons8-male-user-50.png">{{username}}
                </button>
                <div id="user-options">
                    <a href="" onclick="
                    $('#profile-hidden').submit(); return false;">Profile</a>
                    <a href="requests">My Club Requests</a>
                    <a href="logout">Log Out</a>
                </div>

                <form id="profile-hidden" action="profile" method="post">
                    <input type="hidden"
                    value="{{username}}" id="username" name="username">
                    <input type="hidden" id="profileid" name="id">
                </form>
            </div>
        </div>
        
        <p id="message">Applied Message</p>
        
        <div class="org-profile"></div>
        <h1>{{org.orgName}}</h1>
        
        <div id="org-details">
            <h5>Description</h5>
            <p>{{org.description}}</p>
            <div id="positions-avail">
                List of Currently Applicable Positions
                <ol id="List of Currently Applicable Positions:">
                    {{#each org.openPositions}}
                        <li>{{this}}</li>
                    {{/each}}
                </ol>
            </div>
        </div>
        
        <form id="apply-membership" action="apply-membership" method="post">
            <input type="hidden"
            value="{{username}}" id="username" name="username">
            <input type="submit" value="Apply for Membership" action="apply-membership" method="post">
        </form>
    </body>
</html>