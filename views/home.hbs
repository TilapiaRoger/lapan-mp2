<html>
    <head>
        <script src="jquery-3.4.1.js"></script>
        
        <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
        
        <link rel="stylesheet" type="text/css" href="/css/main-pages.css">
        
        <script src="../menuJS.js">
        </script>
        
        <script>
            let adminMenu, userMenu;
            
            $(document).ready(
                function(){
                    let username = $("#username").attr("name")

                    if(username == "webAdmin"){
                        $("#home-user").hide();
                        $(".home-container").hide();
                        $("#org-box").hide();
                        $("#home-admin").show();
                    }
                    else{
                        $("#org-table").hide();
                        $("#home-user").show();
                        $("#home-admin").hide();
                    }
                }
            )
        </script>
    
    </head>

    <body>
        <div class="main-menu">
            <div id="home-user">
                <a href="home">Home</a>
                <div id="student-org-menu">
                    <button id="student-org-menu-buttton"> Student Clubs
                    </button>
                    <div id="student-org-options">
                        <a href="org-list">All Student Clubs</a>
                        <a href="my-org-list">My Student Clubs</a>
                    </div>
                </div>
            </div>
            
            <div id="home-admin">
                <ul id="home-user">
                    <li>
                        <a href="home">Home</a>
                    </li>
                    <li>
                        <a href="org-list">All Student Organizations</a>
                    </li>
                </ul>
            </div>
            
            <div class="user-icon">
                <button name="username" value="{{username}}" id="user-options-button">
                    <img src="/photos/icons8-male-user-50.png">{{username}}
                </button>
                <div id="user-options">
                    <a href="" onclick="
                    $('#profile-hidden').submit(); return false;">Profile</a>
                    <a href="requests">Club Requests</a>
                    <a href="logout">Log Out</a>
                </div>

                <form id="profile-hidden" action="profile" method="post">
                    <input type="hidden"
                    value="{{username}}" id="username" name="username">
                    <input type="hidden" id="profileid" name="id">
                </form>
            </div>
        </div>
            
        <div class="home-container">
            <a href="org-list"><img src="/photos/icons8-male-user-50.png">Apply to A Club Now!</a>
            <a href="my-org-list"><img src="/photos/icons8-male-user-50.png">Check Current Clubs</a>
        </div>
        
    </body>
</html>