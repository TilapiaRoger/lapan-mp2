<html>
    <head>
        <script src="jquery-3.4.1.js"></script>
        
        <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
        
        <link rel="stylesheet" type="text/css" href="/css/main-pages.css">
        
        <script src="../menuJS.js">
        </script>
        
    </head>
    
    <body>
        <div class="main-menu">
            <div id="home-user">
                <a href="home">Home</a>
                <div id="student-org-menu">
                    <button id="student-org-menu-buttton"> Student Clubs
                    </button>
                    <div id="student-org-options">
                        <a href="org-list">All Student Clubs</a>
                        <a href="org-list">My Student Clubs</a>
                    </div>
                </div>
            </div>
            
            <div id="home-admin">
                <ul id="list-user">
                    <li>
                        <a href="home">Home</a>
                    </li>
                    <li>
                        <a href="org-list">All Student Organizations</a>
                    </li>
                </ul>
            </div>
            
            <div class="user-icon">
                <button name="{{username}}" id="user-options-button">
                    <img src="/photos/icons8-male-user-50.png">{{username}}
                </button>
                <div id="user-options">
                    <a href="" onclick="
                    $('#profile-hidden').submit(); return false;">Profile</a>
                    <a href="requests">My Club Requests</a>
                    <a href="logout">Log Out</a>
                </div>

                <form id="profile-hidden" action="profile" method="post">
                    <input type="hidden"
                    value="{{username}}" id="username" name="username">
                    <input type="hidden" id="profileid" name="id">
                </form>
            </div>
        </div>
        
        <div class="org-list">
            <form id="search"> 
                <input type="text">
                <input type="button" value="Search">
            </form>
            
            {{#each orgs}}
                <div data-id="{{_id}}" id="org-box" href="org-profile">
                    <h1>{{orgName}}</h1>
                    <img src="/photos/Joe%20Bouchard%20Polymer%20Clay.jpg"><br><br>
                    <label id="hq">Headquarter Venue: {{room}}</label> 
                    
                    <p id="descript">
                        {{description}}<br>
                    </p>
                    
                    <form id="org-hidden" action="org-profile" method="post">
                        <input type="hidden"
                        value="{{username}}" id="username" name="username">
                        <input type="hidden" name="orgName" value="{{orgName}}">
                        <input type="hidden" name="room" value="{{room}}">
                        <input type="hidden" name="description" value="{{description}}">
                        <input type="submit" id="check-org-profile" value="View More Details">
                    </form>
                </div>
            {{/each}}
                
                <table id="org-table">
                    <tr>
                        <th>Student Organization Name</th>
                        <th>Headquarter Venue</th>
                        <th>Description</th>
                    </tr>
                    <tr>
                        {{#each orgs}}
                            <td>{{orgName}}</td>
                            <td>{{room}}</td>
                            <td>{{description}}</td>
                        {{/each}}
                    </tr>
                </table>
        </div>
    </body>
</html>