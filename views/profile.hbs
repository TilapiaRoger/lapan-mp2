<html>
    <head>
        <script src="jquery-3.4.1.js"></script>
        
        <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
        
        <link rel="stylesheet" type="text/css" href="/css/main-pages.css">
        
        <script src="../menuJS.js">
        </script>
    </head>
    
    <body>
        <div class="main-menu">
            <div id="home-user">
                <a href="home">Home</a>
                <div id="student-org-menu">
                    <button id="student-org-menu-buttton"> Student Clubs
                    </button>
                    <div id="student-org-options">
                        <a href="org-list">All Student Clubs</a>
                        <a href="org-list">My Student Clubs</a>
                    </div>
                </div>
            </div>
            
            <div id="home-admin">
                <ul id="list-user">
                    <li>
                        <a href="home">Home</a>
                    </li>
                    <li>
                        <a href="org-list">All Student Organizations</a>
                    </li>
                </ul>
            </div>
            
            <div class="user-icon">
                <button name="{{username}}" id="user-options-button">
                    <img src="/photos/icons8-male-user-50.png">{{username}}
                </button>
                <div id="user-options">
                    <a href="" onclick="
                    $('#profile-hidden').submit(); return false;">Profile</a>
                    <a href="requests">My Club Requests</a>
                    <a href="logout">Log Out</a>
                </div>

                <form id="profile-hidden" action="profile" method="post">
                    <input type="hidden"
                    value="{{username}}" id="username" name="username">
                    <input type="hidden" id="profileid" name="id">
                </form>
            </div>
        </div>
        
        <div class="profile">
            <h1>About {{user.username}}</h1>
            Real Name:  {{user.realname}}<br>
            ID Number:  {{user.idNo}}<br>

            Birthday:  {{user.birthday}}<br>
            Current Grade/Degree Program (if college student):  {{user.degree}}<br>

            <h1>Contact Details</h1>
            E-Mail Address:  {{user.email}}<br>
            Contact Number:  {{user.contactNo}}<br>
            Address:  {{user.address}}<br>

            <h1>Student Organizations</h1>
                <ol>
                    <li>Org 1</li>
                </ol>
        </div>
    </body>
</html>