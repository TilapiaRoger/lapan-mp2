<html>
    <head>
        <script src="jquery-3.4.1.js"></script>
        
        <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
        
        <link rel="stylesheet" type="text/css" href="/css/main-pages.css">
        
        <script src="../menuJS.js">
        </script>
    </head>
    
    <body>
       <div class="main-menu">
            <div id="home-user">
                <a href="home">Home</a>
                <div id="student-org-menu">
                    <button id="student-org-menu-buttton"> Student Clubs
                    </button>
                    <div id="student-org-options">
                        <a href="org-list">All Student Clubs</a>
                        <a href="my-org-list">My Student Clubs</a>
                    </div>
                </div>
            </div>
            
            <div id="home-admin">
                <ul id="home-user">
                    <li>
                        <a href="home">Home</a>
                    </li>
                    <li>
                        <a href="org-list">All Student Organizations</a>
                    </li>
                </ul>
            </div>
            
            <div class="user-icon">
                <button name="username" value="{{username}}" id="user-options-button">
                    <img src="/photos/icons8-male-user-50.png">{{username}}
                </button>
                <div id="user-options">
                    <a id="profile-access" href="" onclick="
                    $('#profile-hidden').submit(); return false;">Profile</a>
                    <a href="requests">Club Requests</a>
                    <a href="logout">Log Out</a>
                </div>

                <form id="profile-hidden" action="profile" method="post">
                    <input type="hidden"
                    value="{{username}}" id="username" name="username">
                    <input type="hidden" id="profileid" name="id">
                </form>
            </div>
        </div>
        
        <div class="edit-profile">
            <form id="edit-profile">
                <h1>About {{username}}</h1>
                    Username <input type="text" value="Username" id="username" name="username"><br>
                    Full Name <input type="text" value="Full Name (e.g. Juan Santos)" id="real-name" name="rn"><br>
                    ID Number <input type="text" value="E.g. 11512321" id="id" name="idno"><br>
                    Password <input type="password" id="password" name="password"><br>
                    Confirm Password <input type="password" id="confirm-password"><br>
                    
                    <hr>
                    
                    Birthdate <input type="date" id="birthdate" name="birthdate"><br>
                    Degree Program (if college student) <input type="text" id="school-title" name="schooltitle"><br>
                    City and/or Province of Residence <input type="text" id="residence" name="residence"><br>
                    
                    <h1>Contact Details</h1>
                    E-Mail Address <input type="text" id="email" name="email"><br>
                    Contact Number <input type="text" id="contact-no" name="contactno"><br>
                    Address <input type="text" size=60 id="address" name="address"><br>
                    
                    <input type="submit" id="confirm-membership" value="Register"><br>

                <h1>Current Student Organizations</h1>
                    <ol>
                        Org 1<input type="checkbox" name="currOrg">
                        Org 2<input type="checkbox" name="currOrg">
                    </ol>
            </form>
            
        </div>
    </body>
</html>